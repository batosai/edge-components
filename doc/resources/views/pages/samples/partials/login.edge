<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">

    @jrmc.card({ class: 'lg:card-side bg-base-100 shadow-xl' })
      @slot('top')
        <figure><img src="https://picsum.photos/500/500" class="h-full lg:!max-w-fit" alt="" /></figure>
      @end
      @jrmc.card.body()
        @jrmc.form({ action: '/login' })
          @jrmc.form.control({ name: 'email', error: false })
            @!jrmc.form.input({ class: 'input-bordered' })
          @end

          @jrmc.form.control({ name: 'password', error: false })
            @!jrmc.form.input({ class: 'input-bordered' })
          @end

          @jrmc.form.control({ name: 'remember_me', label: false })
            @jrmc.form.label({ class: 'cursor-pointer', text: 'Remember me' })
              @!jrmc.form.toggle()
            @end
          @end

          @jrmc.form.control({ label: false, error: false })
            @!jrmc.button.input({ text: 'Login', type: 'submit', class: 'btn-primary' })
          @end
        @end
      @end
    @end

  </div>
</div>
